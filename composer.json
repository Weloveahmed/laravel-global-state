{
    "name": "ahmedzaky/laravel-global-state",
    "description": "A standardized way to manage Global Mutable Application Data in Laravel.",
    "keywords": ["laravel", "global state", "settings", "configuration"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmed Zaky",
            "email": "ahmedzaky@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/cache": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "AhmedZaky\\GlobalState\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "AhmedZaky\\GlobalState\\GlobalStateServiceProvider"
            ],
            "aliases": {
                "GlobalState": "AhmedZaky\\GlobalState\\Facades\\GlobalState"
            }
        }
    }
}
